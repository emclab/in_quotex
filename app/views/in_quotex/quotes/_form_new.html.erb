<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @quote do |f| %>    
      <%= f.input :task_name, :label => t('Quote Task'), :input_html => {:value => InQuotex.task_class.find_by_id(@quote_task.id).name}  %>
      <%= f.input :quote_date, :label => t('Quote Date'), :as => :string %>
      <%= f.input :product_name, :label => t('Product Name') %>
      <%= f.input :product_spec, :label => t('Product Spec'), :input_html => {:rows => 2} %>
      <%= f.input :project_id, :as => :hidden, :input_html => {:value => @project_id}  %>
      <%= f.input :task_id, :as => :hidden, :input_html => {:value => @quote_task.id}  %>
      <%= f.input :supplier_quote_num, :label => t('Supplier Quote#') %>
      <%= f.input :supplier_contact, :label => t('Supplier Contact') %>
      <%= f.input :qty, :label => t('Qty') %> 
	  <%= f.input :unit, :label => t('Qty Unit'), :collection => @qty_unit %>
	  <%= f.input :lead_time_day, :label => t('Lead Time(day)'), :placeholder => '0,1,2...' %> 
	  <%= f.input :unit_price, :label => t('Unit Price'), :readonly => true %>
	  <%= f.input :shipping_cost, :label => t('Shipping Cost'), :palceholder => 'x.xx or nothing' %>
	  <%= f.input :other_cost, :label => t('Other Cost'), :palceholder => 'x.xx or nothing' %>
	  <%= f.input :tax, :label => t('Tax'), :palceholder => 'x.xx or nothing' %>
	  <%= f.input :good_for_day, :label => t('Good For(day)'), :placeholder => '0,1,2...' %>
	  <%= f.input :quote_condition, :label => t('Quote Condition'), :input_html => {:rows => 4} %>
	  <%= f.input :payment_term, :label => t('Payment Term'), :input_html => {:rows => 4} %>
	  <%= f.input :supplier_id, :label => t('Supplier'), :collection => eval(InQuotex.return_suppliers), :include_blank => true %>
	  
	  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
	  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %> 

<% end%> 

